         </props>
      </property>
   </bean> -->
   
  <!--  <bean id="hibernateTemplateBean" class="org.springframework.orm.hibernate5.HibernateTemplate">
      <property name="sessionFactory" ref="sessionFactoryBean" />
   </bean>  -->
   
  <!--  <bean id="authenticateServiceBean" class="com.jcg.spring.hibernate.service.AuthService">
      <property name="hibernateTemplate" ref="hibernateTemplateBean" />
   </bean>  -->
   
   <bean id="hibernateTemplate" class="org.springframework.orm.hibernate5.HibernateTemplate">
		<property name="sessionFactory" ref="sessionFactory"></property>
		<property name="checkWriteOperations" value="false"></property>
	</bean>
	
	<bean id="sessionFactory"
        		class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
        		<property name="dataSource" ref="dataSource"/>
        		<!-- <property name="configLocation">
        			<value>classpath:hibernate.cfg.xml</value>
        		</property> -->
        		 <property name="annotatedClasses">
					<array>
						<value>com.ntl.ohd.model.Requestor</value>
						<value>com.ntl.ohd.model.Facilities</value>
						<value>com.ntl.ohd.model.Assignee</value>
						<value>com.ntl.ohd.model.Facility</value>
						<value>com.ntl.ohd.model.Request</value>
					</array>
				</property>
        		
        		<property name="hibernateProperties">
        			<props>
        				<prop key="hibernate.dialect">${jdbc.dialect}</prop>
        				<prop key="hibernate.show_sql">true</prop>
        			</props>
        		</property>
        		</bean>
        		
        		<bean id="transactionManager"
        		class="org.springframework.orm.hibernate5.HibernateTransactionManager">
        			<property name="sessionFactory" ref="sessionFactory"/>
        		</bean>
        		
        		<mvc:resources mapping="/resources/**" location="/resources/" />
        		<mvc:annotation-driven />
</beans>
                  
